<article>
	<header>
		<h2><%= link_to post.title, post_path_with_slug(post) %></h2>
		<div>
			Posted:
			<%= time_tag post.created_at %>
		</div>

		<% if post.tag_list.any? %>
		<div>
			Tags:
			<ul class='tags'>
				<% post.tag_list.each do |tag| %>
				<li><%= link_to tag, tag_path(tag) %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
	</header>
	<section>
		<%= markdown post.content %>
	</section>
</article>
