<% if notice %>
<div class='alert alert-success'>
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<%= notice %>
</div>
<% end %>

<section class="post">
	<div class="eight columns">
		<h4 class="post_title"><%= link_to @post.title, post_path_with_slug(@post) %></h4>

		<%= markdown(@post.content) %>

		<div class="metadata">
			<span>
			<i class="icon-time" title="Date Posted"></i>
			<%= time_tag @post.created_at %>
			<% if @post.tag_list.any? %>
				<br>
				<i class="icon-list" title="Tags"></i>
				<%= tag_list(@post) %>
			<% end %>
		</div>
	</div>

	<br class="clear">
</section>

